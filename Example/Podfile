platform :ios, '8.0'

inhibit_all_warnings!
use_frameworks!

target 'Analytical_Example' do
  pod 'Analytical', :path => '../'
  pod 'Google/Analytics'
  pod 'Mixpanel-swift', :git => 'https://github.com/mixpanel/mixpanel-swift', :branch => 'swift3'
  pod 'XCGLogger', :git => 'https://github.com/DaveWoodCom/XCGLogger', :branch => 'swift_3.0'

  target 'Analytical_Tests' do
    inherit! :search_paths

    #
    # Workaround for Swift3 versions
    #

    pod 'Quick', :git => 'https://github.com/Quick/Quick', :branch => 'swift-3.0'
    pod 'Nimble', :git => 'https://github.com/Quick/Nimble', :branch => 'swift-3.0'
  end
end
